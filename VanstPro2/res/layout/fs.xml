    android:background="@drawable/fs_two1"
    />
  
    </LinearLayout>
    <LinearLayout 
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    >
  
    <ImageButton 
    android:id="@+id/fs_0" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:layout_marginRight="5dip"
    android:layout_marginTop="25dip"
    android:background="@drawable/fs_off1"
    />
    <ImageButton 
    android:id="@+id/fs_z" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:background="@drawable/dfb_z5"
    android:layout_gravity="center_horizontal"/>
 
