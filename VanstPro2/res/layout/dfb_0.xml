<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dfb_bg"
    android:weightSum="1" 
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/dfb"
    >
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="37dip"
    android:layout_gravity="center_horizontal"
    android:layout_marginRight="5dip"
    >
     <ImageButton 
    android:id="@+id/dfb_bt3" 
    android:layout_marginTop="6dip"
    android:layout_marginLeft="4dip"
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:background="@drawable/dfb_31"
    />
     <ImageButton 
    android:id="@+id/dfb_bt0" 
    android:layout_marginLeft="4dip"
    android:layout_marginRight="5dip"
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:background="@drawable/dfb_01"
    />
     <ImageButton 
    android:id="@+id/dfb_bt1" 
    android:layout_marginTop="6dip"
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:background="@drawable/dfb_11"
    />
    </LinearLayout>
    
    
    <LinearLayout 
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    >
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical"
    >
    <ImageButton 
    android:id="@+id/dfb_bt4" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:layout_marginLeft="5dip"
    android:background="@drawable/dfb_41"
    />
    <ImageButton 
    android:id="@+id/dfb_bt5" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:layout_marginTop="10dip"
    android:layout_marginRight="5dip"
    android:background="@drawable/dfb_51"
    />
    </LinearLayout>
    <ImageButton 
    android:id="@+id/dfb_btz" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:background="@drawable/dfb_z0"
    android:layout_gravity="center_horizontal"/>
     <LinearLayout 
     android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    >
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageButton 
    android:id="@+id/dfb_bt2" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:background="@drawable/dfb_21"
    />
    <ImageButton 
    android:id="@+id/dfb_bt6" 
    android:layout_marginTop="10dip"
    android:layout_marginLeft="5dip"
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:background="@drawable/dfb_61"
    />
    </LinearLayout>
     </LinearLayout>
   
    </LinearLayout>
    <ImageButton 
    android:id="@+id/start" 
    android:layout_marginTop="30dip"
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:background="@drawable/start"
    android:layout_gravity="center_horizontal"/>
</LinearLayout>
