<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="72dip"
    android:layout_height="294dip"
    android:background="@android:color/black"
    android:orientation="vertical" >
    <FrameLayout 
        android:layout_width="wrap_content"
        android:layout_height="36dip">
    <ImageView
        android:id="@+id/widgetla_vanst"
        android:layout_width="wrap_content"
        android:layout_height="36dip"
        android:src="@drawable/vanstwhitelogo"
        android:scaleType="fitCenter"
        />
    <ProgressBar
        android:id="@+id/widget_image"
        style="?android:attr/progressBarStyleHorizontal"
         android:layout_width="wrap_content"
        android:layout_height="9dip"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    </FrameLayout>
    <Button 
        android:layout_margin="2dip"
        android:layout_weight="1"
        android:text = "总开"
        android:textColor= "#00ff00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widgetla_on"
        android:background="@drawable/widgetbutton"
        />
	<Button 
	    android:layout_margin="2dip"
        android:layout_weight="1"
        android:text = "总关"
        android:textColor= "#00ff00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widgetla_off"
        android:background="@drawable/widgetbutton"
        />
	<Button 
	    android:layout_margin="2dip"
        android:layout_weight="1"
        android:text = "会客"
        android:textColor= "#00ff00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widgetla_moshi1"
        android:background="@drawable/widgetbutton"
        />
	<Button 
	    android:layout_margin="2dip"
        android:layout_weight="1"
        android:text = "娱乐"
        android:textColor= "#00ff00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widgetla_moshi2"
        android:background="@drawable/widgetbutton"
        />
	<Button 
	    android:layout_margin="2dip"
        android:layout_weight="1"
        android:text = "外出"
        android:textColor= "#00ff00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widgetla_moshi3"
        android:background="@drawable/widgetbutton"
        />
	<Button 
	    android:layout_margin="2dip"
        android:layout_weight="1"
        android:text = "睡眠"
        android:textColor= "#00ff00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widgetla_moshi4"
        android:background="@drawable/widgetbutton"
        />
	<FrameLayout 
	    android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
	<Button 
	    android:layout_margin="2dip"
        android:layout_weight="1"
        android:text = "房间"
        android:gravity="center"
        android:textColor= "#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widgetla_room"
        android:background="@drawable/widgetbutton"
        />
	<ProgressBar
        android:id="@+id/widgetla_roomprogressbar"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleHorizontal"
         android:layout_width="wrap_content"
        android:layout_height="9dip"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    </FrameLayout>
	<FrameLayout 
	    android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
	    android:layout_margin="2dip"
        android:layout_weight="1"
        android:text = "连接"
        android:textColor= "#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widgetla_connect"
        android:background="@drawable/widgetbutton"
        />
    <ProgressBar
        android:id="@+id/widgetla_connectprogressbar"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleHorizontal"
         android:layout_width="wrap_content"
        android:layout_height="9dip"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    </FrameLayout>
</LinearLayout>
